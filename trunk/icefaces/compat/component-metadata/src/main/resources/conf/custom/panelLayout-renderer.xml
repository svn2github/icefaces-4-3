<renderer>
	<description>
	         <![CDATA[<p>PanelLayout is a container used for displaying a group of components.
                
                AbsoluteLayout allow placement of components in absolute positions.
                A flow layout arranges components in relative alignment. ]]>
	</description>
	<component-family>com.icesoft.faces.Layout</component-family>
	<renderer-type>com.icesoft.faces.PanelLayout</renderer-type>
 
	<renderer-extension>
		<instance-name>panelLayout</instance-name>
		<is-container>true</is-container>
		<renders-children>true</renders-children>
		<tag-name>panelLayout</tag-name>
		<taglib-prefix>@taglib-prefix@</taglib-prefix>
		<taglib-uri>@taglib-uri@</taglib-uri>
	</renderer-extension>

</renderer>
