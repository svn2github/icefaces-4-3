<component>
	<description>
    Dynamically generates a series of repeating child-components. It doesn't 
    render its own markup.
	</description>

	<display-name>Repeat</display-name>
	<component-type>com.icesoft.faces.Repeat</component-type>

	&ice-cust-repeat-props;

	<component-extension>
		<base-component-type>
			javax.faces.Data
		</base-component-type>
		<component-family>com.icesoft.faces.Repeat</component-family>
        <renderer-type>null</renderer-type>
	</component-extension>

</component>
