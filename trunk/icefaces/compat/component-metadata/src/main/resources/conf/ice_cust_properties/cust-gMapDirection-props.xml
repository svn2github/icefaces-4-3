<!--
&ice-att-userrole-enabled-props;
&ice-att-userrole-rendered-props;
-->
&base-props;
<property>
    <description>
        Point B
    </description>
    <property-name>to</property-name>
    <property-class>java.lang.String</property-class>
    <property-extension>
        <category>ADVANCED</category>
        <editor-class>
            &stringEditor;
        </editor-class>
    </property-extension>
</property>
<property>
    <description>
        Point A
    </description>
    <property-name>from</property-name>
    <property-class>java.lang.String</property-class>
    <property-extension>
        <category>ADVANCED</category>
        <editor-class>
            &stringEditor;
        </editor-class>
    </property-extension>
</property>
<property>
    <description>
    <![CDATA[     
        This attribute reference the id of the panelGroup, that displays the textual direction. (e.g.)<br/>
        
        &lt;ice:GMap&gt;<br/>
             &lt;ice:GDirection textualDivId="textDiv" ...../&gt;</br>
         &lt;/ice:GMap&gt; </br>
         &lt;ice:panelGroup id="textDiv"/&gt;
    ]]>           
    </description>
    <property-name>textualDivId</property-name>
    <property-class>java.lang.String</property-class>
    <property-extension>
        <category>ADVANCED</category>
        <editor-class>
            &stringEditor;
        </editor-class>
    </property-extension>
</property>
