<renderer>
	<description>
		<![CDATA[<p>The outputResource component can be used to expose resources to the page. 
		These resources can be rendered as links that trigger the browser to open the resource as
		an attachment, or open directly from the current page. Any class that implements the 
		com.icesoft.faces.context.Resource can be used to expose the resource.
             ]]>
	</description>
	<component-family>com.icesoft.faces.OutputResource</component-family>		
	<renderer-type>com.icesoft.faces.OutputResourceRenderer</renderer-type>

	<renderer-extension>
		<instance-name>outputResource</instance-name>
		<is-container>false</is-container>
		<renders-children>false</renders-children>
		<tag-name>outputResource</tag-name>
		<taglib-prefix>@taglib-prefix@</taglib-prefix>
		<taglib-uri>@taglib-uri@</taglib-uri>
	</renderer-extension>
</renderer>
