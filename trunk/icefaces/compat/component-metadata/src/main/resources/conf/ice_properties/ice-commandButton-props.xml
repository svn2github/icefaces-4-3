<property>
    <description>
        <![CDATA[
		The base name for all style classes. Default value is <b>iceCmdBtn</b> if 
		enabled and <b>iceCmdBtn-dis</b> if disabled.
		]]>
    </description>
    <property-name>styleClass</property-name>
    <property-class>java.lang.String</property-class>
    <property-extension>
        <category>ADVANCED</category>
        <editor-class>
            &styleClassEditor;
        </editor-class>
    </property-extension>
</property>

<property>
    <description>
        <![CDATA[
		The id of the ice:panelConfirmation component linked to this button.
		]]>
    </description>
    <property-name>panelConfirmation</property-name>
    <property-class>java.lang.String</property-class>
    <property-extension>

        <editor-class>
            &selectOneDomainEditor;
        </editor-class>
        <named-value>
            <name>&domainClass;</name>
            <expression>
                &inputComponentIdsDomain;
            </expression>
        </named-value>
    </property-extension>

</property>

