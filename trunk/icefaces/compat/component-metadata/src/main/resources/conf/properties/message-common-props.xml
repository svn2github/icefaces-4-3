<property>
    <description>
		CSS style(s) to apply to any message with a severity class of "ERROR". 
    </description>
    <property-name>errorStyle</property-name>
    <property-extension>
        <category>APPEARANCE</category>
        <editor-class>
            &stringEditor;
        </editor-class>
    </property-extension>
</property>


